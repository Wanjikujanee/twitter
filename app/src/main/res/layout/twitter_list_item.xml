<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="124dp"
                android:text="JaneMay @janem .jul 5 "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvpost"
                android:layout_width="238dp"
                android:layout_height="71dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:text='"Screaming architecture" is when you look at the package structure of a project, and it makes you want to scream, right? '
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/tvperson" />

            <ImageView
                android:id="@+id/imgreply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:srcCompat="@drawable/ic_baseline_message_24" />

            <TextView
                android:id="@+id/tvmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5"
                app:layout_constraintBottom_toBottomOf="@+id/imgreply"
                app:layout_constraintStart_toEndOf="@+id/imgreply"
                app:layout_constraintTop_toTopOf="@+id/imgreply" />

            <ImageView
                android:id="@+id/imgretweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgreply"
                app:layout_constraintStart_toEndOf="@+id/tvmessage"
                app:layout_constraintTop_toTopOf="@+id/imgreply"
                app:srcCompat="@drawable/ic_baseline_repeat_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgretweet"
                app:layout_constraintStart_toEndOf="@+id/imgretweet"
                app:layout_constraintTop_toTopOf="@+id/imgretweet" />

            <TextView
                android:id="@+id/tvretweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="15"
                app:layout_constraintBottom_toBottomOf="@+id/imgretweet"
                app:layout_constraintStart_toEndOf="@+id/imgretweet"
                app:layout_constraintTop_toTopOf="@+id/imgretweet" />

            <ImageView
                android:id="@+id/imglike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgretweet"
                app:layout_constraintStart_toEndOf="@+id/tvretweet"
                app:layout_constraintTop_toTopOf="@+id/imgretweet"
                app:srcCompat="@drawable/ic_baseline_thumb_up_alt_24" />

            <TextView
                android:id="@+id/tvlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="10"
                app:layout_constraintBottom_toBottomOf="@+id/imglike"
                app:layout_constraintStart_toEndOf="@+id/imglike"
                app:layout_constraintTop_toTopOf="@+id/imglike" />

            <ImageView
                android:id="@+id/imgshare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="61dp"
                app:layout_constraintBottom_toBottomOf="@+id/imglike"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvlike"
                app:layout_constraintTop_toTopOf="@+id/imglike"
                app:srcCompat="@drawable/ic_baseline_ios_share_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>